<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkBackGround"
    tools:context=".controller.MainActivity">

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            style="@style/MainActivityBtn"
            android:text="@string/IAmPassenger"
            android:drawableLeft="@drawable/ic_passenger_black_70"
            android:gravity="center"
            android:onClick="toPassengerActivity"
            />
        <Button
            style="@style/MainActivityBtn"
            android:text="@string/IAmDriver"
            android:drawableLeft="@drawable/ic_taxi_black_70dp"
            android:gravity="center"
            android:onClick="toDriverActivity"
            android:layout_marginTop="20sp"
            />
    </LinearLayout>


</LinearLayout>




    

</android.support.constraint.ConstraintLayout>